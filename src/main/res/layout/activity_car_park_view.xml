<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="com.example.c16208102.parksmartdesign.carParkView">

    <TextView
        android:id="@+id/carParkViewNameID"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:text="TextView"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/carParkViewPriceID"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_alignStart="@+id/carParkTypeID"
        android:layout_below="@+id/carParkViewNameID"
        android:lineSpacingExtra="24sp"
        android:text="TextView"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/carParkTypeID"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/carParkViewPriceID"
        android:layout_marginStart="18dp"
        android:layout_marginTop="37dp"
        android:text="TextView"
        android:textColor="@android:color/white"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/carParkLocationID"
        android:layout_width="140dp"
        android:layout_height="100dp"
        android:layout_alignBottom="@+id/carParkTypeID"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="15dp"
        android:text="TextView"
        android:textAlignment="textEnd"
        android:textColor="@android:color/white"
        android:textSize="10sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/carParkViewDescID"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/carParkTypeID"
        android:layout_marginTop="18dp"
        android:text="TextView"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/start"
        style="@android:style/Widget.Button.Toggle"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/buttonshape"
        android:text="Start Timer" />

    <Button
        android:id="@+id/pause"
        style="@android:style/Widget.Button.Toggle"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="39dp"
        android:layout_toEndOf="@+id/carParkTypeID"
        android:background="@drawable/buttonshape"
        android:text="Stop" />

    <Button
        android:id="@+id/reset"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/chronometer2"
        android:background="@drawable/buttonshape"
        android:text="Reset" />

    <Chronometer
        android:id="@+id/chronometer2"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/pause"
        android:layout_alignStart="@+id/pause"
        android:layout_marginBottom="49dp"
        android:textAlignment="center"
        android:textColor="@color/colorWhite"
        android:textSize="32dp" />
</RelativeLayout>

