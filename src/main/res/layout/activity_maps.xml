<RelativeLayout
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:map="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:id="@+id/map"
              android:name="com.google.android.gms.maps.SupportMapFragment"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"

              tools:context="com.example.priyanka.mapsdemo.MapsActivity"
              android:layout_alignParentStart="true"
              android:layout_alignParentBottom="true"
              android:layout_below="@+id/btnCarPark" />

    <Button
        android:id="@+id/btnCarPark"
        android:layout_width="75dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:onClick="onClick"
        android:background="@drawable/buttonshape1"
        android:text="Public " />

    <Button
        android:id="@+id/staffBtn"
        android:layout_width="75dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/btnCarPark"
        android:background="@drawable/buttonshape1"
        android:onClick="onClick"
        android:text="Staff " />

    <Button
        android:id="@+id/residentalBtn"
        android:layout_width="95dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/buttonshape1"
        android:onClick="onClick"
        android:text="Residental" />

    <Button
        android:id="@+id/paidParkingBtn"
        android:layout_width="75dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/freeParkingBtn"
        android:background="@drawable/buttonshape1"
        android:onClick="onClick"
        android:text="Paid " />

    <Button
        android:id="@+id/freeParkingBtn"
        android:layout_width="75dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:onClick="onClick"
        android:background="@drawable/buttonshape1"
        android:text="Free" />

</RelativeLayout>